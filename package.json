{
  "name": "@pangolin/cli",
  "version": "2.0.0-beta.3",
  "description": "Provides access to the global CLI interface for Pangolin",
  "license": "MPL-2.0",
  "author": {
    "name": "Fynn Becker",
    "email": "post@fynn.be"
  },
  "homepage": "https://github.com/pangolinjs/cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/pangolinjs/cli"
  },
  "bugs": {
    "url": "https://github.com/pangolinjs/cli/issues",
    "email": "post@fynn.be"
  },
  "files": [
    "bin",
    "lib",
    "template"
  ],
  "scripts": {
    "lint:js": "eslint **/*.js",
    "lint:css": "stylelint template/**/*.scss",
    "test:unit": "nyc ava",
    "test:create": "node bin/pangolin.js create test/project",
    "test:dev": "cd test/project && node node_modules/@pangolin/core/bin/pangolin-core dev",
    "test:build": "cd test/project && node node_modules/@pangolin/core/bin/pangolin-core build",
    "test:build:dev": "cd test/project && node node_modules/@pangolin/core/bin/pangolin-core build --dev"
  },
  "bin": {
    "pangolin": "./bin/pangolin.js"
  },
  "preferGlobal": true,
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^2.17.1",
    "fs-extra": "^7.0.0",
    "inquirer": "^6.2.2"
  },
  "devDependencies": {
    "@pangolin/eslint-config": "^2.2.0",
    "@pangolin/stylelint-config": "^1.4.0",
    "ava": "^1.3.1",
    "eslint": "^5.15.3",
    "eslint-plugin-ava": "^5.1.1",
    "nyc": "^13.3.0",
    "stylelint": "^9.10.1"
  },
  "engines": {
    "node": ">= 10.0.0"
  }
}
