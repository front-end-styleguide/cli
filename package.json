{
  "name": "@pangolinjs/cli",
  "version": "2.0.0",
  "description": "CLI for creating new Pangolin.js projects.",
  "license": "MPL-2.0",
  "author": {
    "name": "Fynn Becker",
    "email": "post@fynn.be"
  },
  "homepage": "https://pangolinjs.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/pangolinjs/cli"
  },
  "bugs": {
    "url": "https://github.com/pangolinjs/cli/issues",
    "email": "post@fynn.be"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin",
    "lib",
    "template"
  ],
  "scripts": {
    "lint:js": "eslint --ignore-path .gitignore '**/*.js'",
    "lint:css": "stylelint --ignore-path .gitignore 'template/**/*.scss'",
    "test:unit": "nyc ava",
    "test:create": "node bin/pangolin.js create test/project",
    "test:dev": "cd test/project && node node_modules/@pangolinjs/core/bin/pangolin-core dev",
    "test:build": "cd test/project && node node_modules/@pangolinjs/core/bin/pangolin-core build",
    "test:build:dev": "cd test/project && node node_modules/@pangolinjs/core/bin/pangolin-core build --dev",
    "release": "standard-version"
  },
  "bin": {
    "pangolin": "./bin/pangolin.js"
  },
  "dependencies": {
    "commander": "^4.1.1",
    "kleur": "^3.0.3",
    "prompts": "^2.3.1"
  },
  "devDependencies": {
    "@pangolinjs/eslint-config": "^3.1.2",
    "@pangolinjs/stylelint-config": "^1.7.1",
    "ava": "^3.3.0",
    "eslint": "^6.8.0",
    "eslint-plugin-ava": "^10.0.1",
    "nyc": "^15.0.0",
    "standard-version": "^7.1.0",
    "stylelint": "^13.2.0"
  },
  "engines": {
    "node": ">= 10.0.0"
  }
}
