{
  "name": "@pangolinjs/cli",
  "version": "2.2.3",
  "description": "CLI for creating new Pangolin.js projects.",
  "license": "Hippocratic-2.1",
  "author": {
    "name": "Fynn Becker",
    "email": "fynn@hey.com"
  },
  "homepage": "https://pangolinjs.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/pangolinjs/cli"
  },
  "bugs": {
    "url": "https://github.com/pangolinjs/cli/issues",
    "email": "fynn@hey.com"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin",
    "commands",
    "lib",
    "template"
  ],
  "scripts": {
    "lint:js": "eslint --ignore-path .gitignore '**/*.js'",
    "lint:css": "stylelint --ignore-path .gitignore 'template/**/*.scss'",
    "test:unit": "nyc ava",
    "test:create": "node bin/pangolin.js create test/project",
    "test:dev": "cd test/project && npm run dev",
    "test:build": "cd test/project && npm run build",
    "test:build:dev": "cd test/project && npm run build:dev",
    "release": "standard-version"
  },
  "bin": {
    "pangolin": "./bin/pangolin.js"
  },
  "dependencies": {
    "commander": "^6.1.0",
    "kleur": "^4.1.1",
    "prompts": "^2.3.2"
  },
  "devDependencies": {
    "@pangolinjs/eslint-config": "^5.0.0",
    "@pangolinjs/stylelint-config": "^2.0.3",
    "ava": "^3.12.1",
    "eslint": "^7.9.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-ava": "^11.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "nyc": "^15.1.0",
    "standard-version": "^9.0.0",
    "stylelint": "^13.7.1",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0"
  },
  "engines": {
    "node": ">= 10.0.0"
  }
}
