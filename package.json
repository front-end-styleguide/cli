{
  "name": "@pangolinjs/cli",
  "version": "2.1.0",
  "description": "CLI for creating new Pangolin.js projects.",
  "license": "Hippocratic-2.1",
  "author": {
    "name": "Fynn Becker",
    "email": "post@fynn.be"
  },
  "homepage": "https://pangolinjs.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/pangolinjs/cli"
  },
  "bugs": {
    "url": "https://github.com/pangolinjs/cli/issues",
    "email": "post@fynn.be"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin",
    "lib",
    "template"
  ],
  "scripts": {
    "lint:js": "eslint --ignore-path .gitignore --cache '**/*.js'",
    "lint:css": "stylelint --ignore-path .gitignore --cache 'template/**/*.scss'",
    "test:unit": "nyc ava",
    "test:create": "node bin/pangolin.js create test/project",
    "test:dev": "cd test/project && node node_modules/@pangolinjs/core/bin/pangolin-core dev",
    "test:build": "cd test/project && node node_modules/@pangolinjs/core/bin/pangolin-core build",
    "test:build:dev": "cd test/project && node node_modules/@pangolinjs/core/bin/pangolin-core build --dev",
    "release": "standard-version"
  },
  "bin": {
    "pangolin": "./bin/pangolin.js"
  },
  "dependencies": {
    "commander": "^5.1.0",
    "kleur": "^3.0.3",
    "prompts": "^2.3.2"
  },
  "devDependencies": {
    "@pangolinjs/eslint-config": "^4.0.0",
    "@pangolinjs/stylelint-config": "^2.0.1",
    "ava": "^3.8.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.1.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-ava": "^10.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "nyc": "^15.1.0",
    "standard-version": "^8.0.0",
    "stylelint": "^13.5.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.17.2"
  },
  "engines": {
    "node": ">= 10.0.0"
  }
}
